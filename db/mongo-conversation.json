{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "conversation": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "objectid"
        },
        "createdat": {
          "type": "timestamp"
        },
        "user": {
          "type": "numeric"
        },
        "history": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "messageid": {
                  "type": "objectid"
                },
                "text": {
                  "type": "string"
                },
                "usertype": {
                  "type": "string"
                },
                "createdat": {
                  "type": "timestamp"
                }
              }
            }
          ]
        }
      }
    }
  }
}